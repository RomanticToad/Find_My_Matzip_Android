<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navTab.navTabFragment.ProfileUpdateFragment"
    android:onClick="hideKeyboard">

    <!-- hideKeyboard : text작성중 다른곳 누르면 키보드 내리기-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/userUpdate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nexonbold"
                android:paddingBottom="20dp"
                android:text="Edit Profile"
                android:textColor="#FFC107"
                android:textSize="35sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="75dp"
                app:cardElevation="20dp">

                <ImageView
                    android:id="@+id/myProfileImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/image1"></ImageView>
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/userId"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/radius"
                android:fontFamily="@font/nexonlight"
                android:paddingLeft="30dp"
                android:hint="UserId"
                android:textColor="#B3B3B3"
                android:textSize="15sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:editable="false"
                android:focusable="false"></EditText>

            <EditText
                android:id="@+id/userPwd"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/radius"
                android:fontFamily="@font/nexonlight"
                android:paddingLeft="30dp"
                android:hint="UserPassword"
                android:textColor="#B3B3B3"
                android:textSize="15sp"
                android:ems="10"
                android:inputType="textPassword"></EditText>

            <EditText
                android:id="@+id/userName"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/radius"
                android:fontFamily="@font/nexonlight"
                android:paddingLeft="30dp"
                android:hint="UserName"
                android:textColor="#B3B3B3"
                android:textSize="15sp"
                android:ems="10"
                android:inputType="textPersonName"></EditText>



            <EditText
                android:id="@+id/userPhone"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/radius"
                android:fontFamily="@font/nexonlight"
                android:paddingLeft="30dp"
                android:hint="UserPhoneNum"
                android:textColor="#B3B3B3"
                android:textSize="15sp"
                android:ems="10"
                android:inputType="textPhonetic"
                ></EditText>

            <EditText
                android:id="@+id/userAddress"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/radius"
                android:fontFamily="@font/nexonlight"
                android:paddingLeft="30dp"
                android:hint="Address"
                android:textColor="#B3B3B3"
                android:textSize="15sp"
                android:ems="10"></EditText>

            <EditText
                android:id="@+id/userAddress_Detail"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/radius"
                android:ems="10"
                android:fontFamily="@font/nexonlight"
                android:hint="Address Detail"
                android:paddingLeft="30dp"
                android:textColor="#B3B3B3"
                android:textSize="15sp"></EditText>

            <LinearLayout

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RadioGroup
                    android:id="@+id/testRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="남자"></RadioButton>

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="여자">

                    </RadioButton>
                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/updateBtn"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/nexonmed"
                    android:text="수정"></Button>

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/nexonmed"
                    android:text="취소"></Button>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>